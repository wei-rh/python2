.container .box {
  margin-top: 100px;
  padding: 0 68rpx;
  padding-left: 0px;
}

.container .box .row {
  display: flex;
  align-items: center;
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #d0d0d0;
  margin-top: 70rpx;
}

.container .box .row image {
  width: 50rpx;
  height: 46rpx;
  margin-right: 20rpx;
}

.container .box .row image.code {
  width: 50rpx;
  height: 46rpx;
}

.container .box .row input {
  flex: 1;
  padding: 0 10rpx;
  font-size: 28rpx;
  color: #000;
}

.container .box .row button {
  width: 161rpx;
  height: 53rpx;
  line-height: 50rpx;
  border: 1rpx solid #a0b8b2;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #16b388;
}

.container .button {
  margin: 200rpx auto 0;
  width: 626rpx;
  height: 84rpx;
  line-height: 84rpx;
  background: linear-gradient(-90deg, #38c6a0 0%, #6de0c3 100%);
  border-radius: 42rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #fff;
}
