      <image src="/images/image-myData/2.png" class="tool-img" mode="aspectFit"></image>
    </view>
    <view class="desc">
      我的收藏
    </view>
  </view>
  <view class="common" bindtap="bindmyData3">
    <view class="img">
      <image src="/images/image-myData/3.png" class="tool-img" mode="aspectFit"></image>
    </view>
    <view class="desc">
      我的地址
    </view>
  </view>
</view>
