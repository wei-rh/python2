<!--pages/myData/myData.wxml-->
<view class="member">
  <view class="sss">
    <image src="/images/image-myData/1.png" class="shezhi" bindtap="bindmyData1"></image>
  </view>
  <view class="head">
    <view class="image-1">
      <image src="/images/image-myData/1.jpg"></image>
    </view>
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 点击登录 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="headimg" src="{{userInfo.avatarUrl}}" mode="cover"></image>
    </block>
    <view class="image-2">
      <image src="/images/image-myData/2.jpg"></image>
    </view>
  </view>
  <view class="name">{{userInfo.nickName}}</view>
</view>
<!-- 手机号 -->
<view class="phone">
  <view class="image-phone">
    <image class="image-phone-1" src="/images/image-myData/4.png"></image>
    <view class="text-phone">绑定手机号</view>
    <image class="image-phone-2" src="/images/image-myData/5.png"></image>
  </view>
  <view class="text-phone2">如果您用手机号注册会员或您想通过微信外购物请绑定您的手机号码</view>
</view>
<!-- tool -->
<view class="tool">
