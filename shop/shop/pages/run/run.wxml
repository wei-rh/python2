<!--pages/run/run.wxml-->
 <swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
  <block wx:for="{{imgUrls}}" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item}}"  mode='widthFix'  class="slide-image" width="355" height="1000"/>
    </swiper-item>
  </block>
</swiper>
<view class="block">   
  <view class="block-text">跑腿在下方有对应的功能，请根据需要选定功能。</view> 
  <view class="block-div">
    <view class="div" bindtap="bindrun1">帮我买</view>
    <view class="div" bindtap="bindrun2">帮我送</view>
    <view class="div" bindtap="bindrun3">取快递</view>
    <view class="div" bindtap="bindrun4">寄快递</view>
  </view>
</view>

<view class="div-image"><image src="/images/run-image/5.png"></image></view>
